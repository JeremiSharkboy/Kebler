<UserControl
    x:Class="Kebler.UI.Controls.TorrentMoreInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Kebler.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Kebler"
    lex:ResxLocalizationProvider.DefaultDictionary="Dialogs"
    mc:Ignorable="d">
    <Grid>
        <Border Padding="10">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <Image
                        Height="15"
                        Margin="0"
                        Source="{Binding Converter={StaticResource PieceToImage}}"
                        Stretch="Fill">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="305"
                                ShadowDepth="0" />
                        </Image.Effect>
                    </Image>
                    <ProgressBar
                        Height="5"
                        Margin="0"
                        Background="{DynamicResource ProgressBarBackGroundBrush}"
                        BorderThickness="0"
                        Foreground="DarkBlue"
                        Maximum="1"
                        Value="{Binding PercentDone}" />
                </StackPanel>

            </Grid>
        </Border>
        <Grid
            Name="LoadingSettingsGrid"
            d:IsHidden="True"
            Background="{DynamicResource ListBox.Static.Background}"
            Visibility="Collapsed">
            <StackPanel
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Normal"
                    Foreground="White"
                    Text="{lex:LocText ATD_RetrievingSettings}"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextRenderingMode="ClearType" />
                <local:LoadingRing
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />

            </StackPanel>


        </Grid>
    </Grid>

</UserControl>
