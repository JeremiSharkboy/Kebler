            <TabItem Header="Files">
                <local:FilesTreeView
                    x:Name="FileTreeViewControl"
                    x:FieldModifier="public"
                    DataContext="{Binding FilesTree}" />
            </TabItem>
        </TabControl>
        <Label
            Height="27"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Esc, to hide"
            Foreground="{DynamicResource ForegroundBrush.Gray}" />

        <Grid
            VerticalAlignment="Stretch"
            Background="{DynamicResource ListBox.Static.Background}"
            Visibility="{Binding Loading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Normal"
                    Foreground="White"
                    Text="{lex:LocText ATD_RetrievingSettings}"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextRenderingMode="ClearType" />
                <local:LoadingRing
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="0"
            d:IsHidden="True"
            Background="{DynamicResource ListBox.Static.Background}"
            Visibility="{Binding IsMore, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel
                Height="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Image Width="60" Source="/Kebler.UI;Component/Icons/Kebler_dark_512x512.png" />
                <TextBlock
                    Width="Auto"
                    Margin="0,10,0,0"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="{DynamicResource ForegroundBrush.Gray}"
                    Text="Select only one torrent to see more info"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextHintingMode="Auto"
                    TextOptions.TextRenderingMode="Grayscale" />

                <TextBlock
                    Width="Auto"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Foreground="{DynamicResource ForegroundBrush.Gray}"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Ideal"
                    TextOptions.TextHintingMode="Auto"
                    TextOptions.TextRenderingMode="Grayscale">
                    <Run Text="{Binding SelectedCount}" />
                    <Run Text="torrents selected" />
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>

</UserControl>
