<Window
    x:Class="Kebler.UI.Windows.ConnectionManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource ConnectionManagerTitle}"
    Width="520"
    Height="365"
    ResizeMode="NoResize"
    Style="{DynamicResource WindowStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel
                Height="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Image Width="150" Source="../../Theme/Icons/Kebler_dark_512x512.png" />
                <Label
                    Width="Auto"
                    Margin="0,5,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource NoSelectedServerContent}"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource LabelSnipForegroundActiveBrush}" />
            </StackPanel>

        </Grid>
        <TabControl
            x:Name="SelectedServerTab"
            Grid.Column="1"
            IsEnabled="{Binding IsSelectedServerTabEnabled}"
            SelectedIndex="0"
            TabStripPlacement="Top"
            Visibility="Visible">
            <TabItem Header="{DynamicResource GeneralTabTitle}">
                <Grid x:Name="SelectedServerGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Vertical">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Width="Auto"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Content="{DynamicResource ServerTitleLblContent}" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Content="{DynamicResource RemoteHostLblContent}" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="Auto"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Content="{DynamicResource RemotPortLblContent}" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,5,10,5"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5,5,10,5"
                                Padding="0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="71"
                                Margin="5,5,0,5"
                                HorizontalAlignment="Left"
                                TextWrapping="Wrap" />
                            <CheckBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="68"
                                Margin="81,9,0,5"
                                HorizontalAlignment="Left"
                                Content="{DynamicResource IsNeedSllbtnContent}"
                                IsChecked="False"
                                IsEnabled="False" />

                        </Grid>
                        <Grid Margin="0,15,10,0">
                            <GroupBox IsEnabled="{Binding IsChecked, ElementName=AuthEnebled}">
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="30" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource UserLblContent}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource PswdLblContent}"
                                        IsEnabled="{Binding IsChecked, ElementName=AskPass}" />
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5,5,10,5"
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center" />
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,0,10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <PasswordBox
                                            Margin="5,5,0,5"
                                            Padding="0"
                                            HorizontalContentAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="{Binding IsChecked, ElementName=AskPass}" />
                                        <CheckBox
                                            x:Name="AskPass"
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            HorizontalContentAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            Content="{DynamicResource AlwaysAskPassword}" />
                                    </Grid>
                                </Grid>

                            </GroupBox>
                            <Grid
                                Width="Auto"
                                Margin="7,-6,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="{StaticResource WindowBackgroundActiveBrush}">
                                <CheckBox
                                    x:Name="AuthEnebled"
                                    Margin="3,0,3,0"
                                    Content="{DynamicResource IsNeedAuthLblContent}"
                                    IsChecked="False"
                                    IsEnabled="{Binding IsSelectedServerTabEnabled}" />
                            </Grid>
                        </Grid>
                        <Grid Margin="0,15,10,0">
                            <GroupBox Header="{DynamicResource OtherSettingsGroupHeader}">
                                <Grid Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource RpcPathLabelContent}" />

                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,5,10,5"
                                        Padding="0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center" />

                                </Grid>
                            </GroupBox>
                        </Grid>

                    </StackPanel>






                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource ProxyTabTitle}" IsEnabled="True">
                <Grid />
            </TabItem>
        </TabControl>

        <Border
            Grid.RowSpan="2"
            Grid.Column="0"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <ListBox />

                <Border
                    Grid.Row="1"
                    Background="{DynamicResource WindowBackgroundBrush}"
                    BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Width="25"
                            Height="25"
                            Margin="1,0,0,0"
                            Content="{DynamicResource AddBtnContent}" />
                        <Button
                            Width="25"
                            Height="25"
                            Margin="1,0,0,0"
                            Content="{DynamicResource RemoveBtnContent}" />
                    </StackPanel>
                </Border>


            </Grid>
        </Border>



    </Grid>
</Window>
