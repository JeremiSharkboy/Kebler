<window:CustomizableWindow
    x:Class="Kebler.Dialogs.MessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Kebler.UI.Controls;assembly=Kebler.UI"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:ui="clr-namespace:Kebler.UI;assembly=Kebler.UI"
    xmlns:window="clr-namespace:Kebler.UI.CSControls.Window;assembly=Kebler.UI"
    MinHeight="155"
    MaxWidth="470"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Kebler"
    lex:ResxLocalizationProvider.DefaultDictionary="Dialogs"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            MinHeight="69"
            Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Image
                Name="Logo"
                Grid.Column="1"
                Width="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                Source="/Kebler.UI;Component/Icons/KeblerVided.png"
                Visibility="Collapsed" />
            <TextBlock
                Name="TextBlock_Message"
                Grid.Column="3"
                Width="Auto"
                MaxWidth="500"
                VerticalAlignment="Center"
                FontSize="13"
                TextAlignment="Left"
                TextOptions.TextFormattingMode="Ideal"
                TextOptions.TextHintingMode="Animated"
                TextOptions.TextRenderingMode="ClearType"
                TextWrapping="Wrap" />
            <StackPanel Grid.Column="3">
                <TextBlock
                    Name="AskDialogText"
                    FontSize="15"
                    FontWeight="DemiBold"
                    Text="TEST"
                    TextAlignment="Left" />
                <TextBox
                    Name="DialogTextBox"
                    Height="25"
                    Margin="0,10,0,0"
                    VerticalContentAlignment="Center"
                    Visibility="Collapsed" />
                <PasswordBox
                    Name="DialogPasswordBox"
                    Height="25"
                    Margin="0,10,0,0"
                    Visibility="Collapsed" />
            </StackPanel>
            <ContentControl Name="Data" Grid.Column="3" />
        </Grid>
        <Grid Grid.Row="1" MinHeight="49">
            <StackPanel
                Margin="5,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <!--<controls:LoadingRing
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsWorking, Converter={StaticResource ReverseBoolToVisibilityConverter}}" />-->
                <Button
                    Name="No"
                    Height="26"
                    HorizontalAlignment="Right"
                    Click="NoCancel_Click"
                    Content="{lex:LocText BTNS_No}"
                    Visibility="Collapsed" />
                <Button
                    Name="Yes"
                    Height="26"
                    HorizontalAlignment="Right"
                    Click="OkYes_Click"
                    Content="{lex:LocText BTNS_Yes}"
                    Visibility="Collapsed" />
                <Button
                    Name="Cancel"
                    Height="26"
                    Click="NoCancel_Click"
                    Content="{lex:LocText BTNS_Cancel}"
                    Visibility="Collapsed" />
                <Button
                    Name="Ok"
                    Height="26"
                    HorizontalAlignment="Right"
                    Click="OkYes_Click"
                    Content="{lex:LocText BTNS_Ok}"
                    Visibility="Collapsed" />
            </StackPanel>
        </Grid>

    </Grid>
</window:CustomizableWindow>